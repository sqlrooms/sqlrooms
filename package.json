{
  "name": "sqlrooms",
  "version": "0.0.0",
  "repository": "git@github.com:sqlrooms/sqlrooms.git",
  "author": "Ilya Boyandin <ilya@boyandin.me>",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev --concurrency=20 --filter=@sqlrooms/* & pnpm run ladle",
    "clean": "shx rm -rf packages/**/dist",
    "docs:clean": "shx rm -rf docs/.vitepress/dist",
    "build": "turbo build --filter=@sqlrooms/*",
    "build:all": "pnpm clean && turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "prepare": "husky",
    "lint": "turbo lint --filter=@sqlrooms/* --",
    "typedoc": "turbo typedoc",
    "typedoc:watch": "turbo typedoc --concurrency=20 -- -watch",
    "typescript": "tsc --noEmit",
    "ladle": "ladle serve",
    "graph": "turbo run build --graph",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs:dev": "pnpm run typedoc:watch & vitepress dev docs",
    "docs:build": "pnpm run docs:clean && pnpm run typedoc && vitepress build docs",
    "docs:preview": "pnpm run typedoc && vitepress preview docs",
    "docs:deploy": "pnpm run docs:build && gh-pages -d docs/.vitepress/dist -r git@github.com:sqlrooms/sqlrooms.github.io.git -b main -f",
    "version-prerelease": "lerna version prerelease --sync-workspace-lock",
    "version-patch": "lerna version patch --no-push --sync-workspace-lock",
    "version-minor": "lerna version minor --no-push --sync-workspace-lock",
    "version-major": "lerna version major --no-push --sync-workspace-lock",
    "publish-dry-run": "turbo run publish && lerna publish from-package --yes --dry-run",
    "publish-preview": "turbo run publish && lerna publish from-package --yes --dist-tag preview",
    "publish-release": "turbo run publish && lerna publish from-package --yes"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@duckdb/duckdb-wasm": "^1.29.1-dev68.0",
    "@eslint/js": "^9.18.0",
    "@ladle/react": "^5.0.1",
    "@lerna-lite/cli": "^3.11.0",
    "@lerna-lite/publish": "^3.11.0",
    "@lerna-lite/version": "^3.11.0",
    "@sqlrooms/eslint-config": "workspace:*",
    "@sqlrooms/typedoc-config": "workspace:*",
    "@sqlrooms/typescript-config": "workspace:*",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "apache-arrow": "^18.1.0",
    "eslint": "^9.18.0",
    "framer-motion": "10.18.0",
    "gh-pages": "^6.1.1",
    "glob": "^11.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remove": "^0.1.5",
    "shx": "^0.3.4",
    "turbo": "^2.4.1",
    "typedoc": "^0.27.6",
    "typescript": "5.7.3",
    "vitepress": "^1.6.3"
  },
  "pnpm": {
    "overrides": {
      "apache-arrow": "18.1.0",
      "@types/react": "18.3.18",
      "@duckdb/duckdb-wasm": "1.29.1-dev68.0"
    }
  }
}
