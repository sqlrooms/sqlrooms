{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "typedoc": {
      "persistent": false,
      "outputs": ["../../docs/api/**"]
    },
    "typedoc:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["typedoc"],
      "inputs": ["-watch"]
    },
    "publish": {
      "dependsOn": ["build", "test"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["test"],
      "inputs": ["-watch"]
    }
  }
}
