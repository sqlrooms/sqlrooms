{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "0.9.1",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish %v",
      "changelogPreset": "./conventional-changelog-preset.js",
      "push": true,
      "forcePublish": true,
      "createRelease": "github"
    },
    "publish": {
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*"
  ]
}
